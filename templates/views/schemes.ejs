<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>schemes</title>
    <style>
        .heading{
            padding-left: 20px;
        }
        th { 
	background: #3498db; 
	color: white; 
	font-weight: bold; 
	}
    th:hover{ 
	background: yellow; 
	color:black; 
	font-weight: bold; 
	}

    td, th { 
	    padding: 10px; 
	    border: 1px solid #ccc; 
	    text-align: left; 
	    font-size: 18px;
	}
    td:hover,th:hover{
        background-color: yellow;
        color: red;
        font-size: x-large;

    }
    table{
        margin-left: 400px;
        margin-top: 100px;
        background-color: white;
        margin-bottom: 50px;
    }
    body {
	background: linear-gradient(-45deg, white, red,white,red );
	background-size: 400% 400%;
	animation: gradient 15s ease infinite;
	height: 100vh;
}

@keyframes gradient {
	0% {
		background-position: 0% 50%;
	}
	50% {
		background-position: 100% 50%;
	}
	100% {
		background-position: 0% 50%;
	}
}
    </style>
</head>
<body background="/postimage.jpg" style="size: 100vh;background-repeat: no-repeat;background-attachment: fixed;background-position: center;">
    <%- include('../partials/navbar') %>
    <table>
        <thead>
            <tr>
                <th class="heading">Scheme</th>
                <th class="heading">Interest</th>
                <th class="heading">Period</th>
                <th class="heading">Installment</th>
            </tr>
        </thead>
        <tbody id="data-output">

        </tbody>


    </table>
    <script>
        fetch("schemes.json")
        .then(function(response){
            return response.json();
        })
        .then(function(schemes){
            let placeholder=document.querySelector("#data-output");
            let out="";
            for(let product of schemes){
                out+=`
                    <tr>
                        <td>${product.scheme}</td>
                        <td>${product.Interest}</td>
                        <td>${product.Period}</td>
                        <td>${product.Installment}</td>
                    </tr>
                `;
            }

            placeholder.innerHTML=out;
        })
    </script>
</body>
</html>